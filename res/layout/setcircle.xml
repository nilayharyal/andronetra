<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView android:text="Latitude" 
              android:id="@+id/textView1" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/plat" 
              android:layout_width="match_parent" 
              android:layout_height="wrap_content" 
              android:text="EditText"></EditText>
    <TextView android:text="Longitude" 
              android:id="@+id/textView2" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/plon" 
              android:layout_width="match_parent" 
              android:layout_height="wrap_content" 
              android:text="EditText"></EditText>
    <TextView android:text="Name" 
              android:id="@+id/cname" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/circlename" 
              android:layout_width="match_parent" 
              android:layout_height="wrap_content" 
              android:text="EditText"></EditText>
    
    <Button   android:text="Set co-ordinates" 
              android:id="@+id/setc" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content"></Button>
    <Button   android:text="Get co-ordinates" 
              android:id="@+id/getc" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content"></Button>
</LinearLayout>
